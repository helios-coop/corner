= content_for :head do
  = stylesheet_link_tag "sessions"

.container-fluid
  .row
    .col.col-sm.col-md

    .col-10.col-sm-8.col-md-5
      %h1.mt-5
        .row.justify-content-between
          .col-auto Log In
          .col-auto#or or
          .col-auto= link_to "Create an Account", signup_path, class: "btn btn-warning"

      = form_tag login_path do
        .form-group
          = label_tag :email
          = email_field_tag :email, nil, placeholder: "crypto@kittens.com", class: "form-control"
        .form-group
          = label_tag :password
          = password_field_tag :password, nil, placeholder: "12345", class: "form-control"

        = submit_tag "Log In", class: "btn btn-primary"

    .col.col-sm.col-md
