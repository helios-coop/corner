
-# Update details card
- if @listing.google_places_id
  $("#mobile-listing-details").html("#{escape_javascript(render partial: 'google_place_details', locals: { listing: @listing } ) }");
- else
  $("#mobile-listing-details").html("#{escape_javascript(render partial: 'non_google_place_details', locals: { listing: @listing } ) }");


-# Update map
var latitude = parseFloat("#{@listing.lat}")
var longitude = parseFloat("#{@listing.long}")

var newCenter = new google.maps.LatLng(latitude, longitude);
console.log("Listing Center Point: ", newCenter);

googleMap.setCenter(newCenter);
googleMap.setZoom(16)

