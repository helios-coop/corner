.container-fluid
  .row
    .col.col-sm.col-md
    .col-10.col-sm-8.col-md-5.mt-5
      %h1 Contact Us

      = form_tag contact_path do
        .form-group
          = label_tag :name
          = text_field_tag :name, nil, placeholder: "Nick Szabo", class: "form-control", required: true
        .form-group
          = label_tag :email
          = email_field_tag :email, nil, placeholder: "nick@bit-gold.com", class: "form-control", required: true
        .form-group
          = label_tag :message
          :ruby
            placeholder = "Hi, I'm wondering if you can add bit-gold as a " \
                          "currency to your platform. It's like bitcoin, but old school. " \
                          "\n\n-- thanks"
          = text_area_tag :message, nil, rows: 5, required: true, class: "form-control", placeholder: placeholder

        = submit_tag "Send Us A Message", class: "btn btn-primary"
    .col.col-sm.col-md
